{
    "tasks": {
        "dev": "deno run --watch  main.ts",
        "prisma:studio": "deno run -A prisma studio --hostname 0.0.0.0",
        "prisma:seed": "deno run -A --env-file seed.ts",
        "prisma:debug_seed": "deno run -A --env-file --inspect-wait seed.ts",
        "prisma:migrate_dev": "deno run -A prisma migrate dev",
        "prisma:deploy": "deno run -A prisma migrate deploy",
        "prisma:generate": "deno run -A prisma generate",
        "prisma:validate": "deno run -A prisma validate"
    },
    "imports": {
        "@prisma/client": "npm:@prisma/client@^6.16.2",
        "@std/assert": "jsr:@std/assert@1",
        "hono": "npm:hono@^4.10.6",
        "prisma": "npm:prisma@^6.16.2",
        "he": "npm:he@^1.2.0"
    },
    "fmt": {
        "indentWidth": 4,
        "lineWidth": 130,
        "singleQuote": false,
        "proseWrap": "never"
    }
}
